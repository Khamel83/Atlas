# Atlas Production Environment Configuration
# This file contains production-specific environment variables

# Environment identifier
ATLAS_ENVIRONMENT=production

# Basic Configuration
DATA_DIRECTORY=production_data
LOG_LEVEL=INFO

# LLM Configuration - Optimized for production
LLM_PROVIDER=openrouter
LLM_MODEL=google/gemini-2.0-flash-lite-001
MODEL_PREMIUM=anthropic/claude-3-sonnet
MODEL_BUDGET=mistralai/mistral-7b-instruct:free
MODEL_FALLBACK=google/gemini-2.0-flash-lite-001

# Production timeouts and limits
MAX_RETRIES=5
PROCESSING_TIMEOUT=60
PODCAST_EPISODE_LIMIT=50

# API Keys (MUST be set for production)
OPENROUTER_API_KEY=
YOUTUBE_API_KEY=
DEEPSEEK_API_KEY=

# Production credentials (set if needed)
INSTAPAPER_LOGIN=
INSTAPAPER_PASSWORD=
NYT_USERNAME=
NYT_PASSWORD=

# Production feature flags (security-focused)
USE_12FT_IO_FALLBACK=false
USE_PLAYWRIGHT_FOR_NYT=false

# Ingestor configuration
ARTICLE_INGESTOR_ENABLED=true
PODCAST_INGESTOR_ENABLED=true
YOUTUBE_INGESTOR_ENABLED=true
INSTAPAPER_INGESTOR_ENABLED=true

# Transcription configuration
TRANSCRIBE_ENABLED=true
TRANSCRIBE_BACKEND=api
WHISPER_PATH=/usr/local/bin/whisper