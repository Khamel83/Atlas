# Atlas Test Environment Configuration
# This file contains test-specific environment variables

# Environment identifier
ATLAS_ENVIRONMENT=test

# Basic Configuration
DATA_DIRECTORY=test_output
LOG_LEVEL=WARNING

# LLM Configuration - Use mock provider for testing
LLM_PROVIDER=mock
LLM_MODEL=mock-model
MODEL_PREMIUM=mock-model
MODEL_BUDGET=mock-model
MODEL_FALLBACK=mock-model

# Fast timeouts for testing
MAX_RETRIES=1
PROCESSING_TIMEOUT=5
PODCAST_EPISODE_LIMIT=1

# No API keys needed for testing
OPENROUTER_API_KEY=test-key
YOUTUBE_API_KEY=test-key
DEEPSEEK_API_KEY=test-key

# Test credentials
INSTAPAPER_LOGIN=test@example.com
INSTAPAPER_PASSWORD=test-password
NYT_USERNAME=test@example.com
NYT_PASSWORD=test-password

# Test feature flags
USE_12FT_IO_FALLBACK=false
USE_PLAYWRIGHT_FOR_NYT=false

# Disable external services for testing
ARTICLE_INGESTOR_ENABLED=true
PODCAST_INGESTOR_ENABLED=true
YOUTUBE_INGESTOR_ENABLED=false
INSTAPAPER_INGESTOR_ENABLED=false

# Disable transcription for testing
TRANSCRIBE_ENABLED=false
TRANSCRIBE_BACKEND=local
WHISPER_PATH=/usr/local/bin/whisper