# Atlas Development Environment Configuration
# This file contains development-specific environment variables

# Environment identifier
ATLAS_ENVIRONMENT=development

# Basic Configuration
DATA_DIRECTORY=dev_output
LOG_LEVEL=DEBUG

# LLM Configuration - Use free models for development
LLM_PROVIDER=openrouter
LLM_MODEL=mistralai/mistral-7b-instruct:free
MODEL_PREMIUM=mistralai/mistral-7b-instruct:free
MODEL_BUDGET=mistralai/mistral-7b-instruct:free
MODEL_FALLBACK=google/gemma-2-9b-it:free

# Development-friendly timeouts and limits
MAX_RETRIES=1
PROCESSING_TIMEOUT=10
PODCAST_EPISODE_LIMIT=5

# API Keys (set these with your actual keys)
OPENROUTER_API_KEY=
YOUTUBE_API_KEY=
DEEPSEEK_API_KEY=

# Optional credentials
INSTAPAPER_LOGIN=
INSTAPAPER_PASSWORD=
NYT_USERNAME=
NYT_PASSWORD=

# Development feature flags
USE_12FT_IO_FALLBACK=true
USE_PLAYWRIGHT_FOR_NYT=false

# Ingestor configuration
ARTICLE_INGESTOR_ENABLED=true
PODCAST_INGESTOR_ENABLED=true
YOUTUBE_INGESTOR_ENABLED=true
INSTAPAPER_INGESTOR_ENABLED=true

# Transcription configuration
TRANSCRIBE_ENABLED=false
TRANSCRIBE_BACKEND=local
WHISPER_PATH=/usr/local/bin/whisper